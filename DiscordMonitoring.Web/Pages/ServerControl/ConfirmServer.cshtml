@page
@model ConfirmServerModel

@{
    ViewData["Title"] = "ConfirmServer";
}

<h1 class="text-center" style="padding: 40px;justify-content: center; display: flex">Подтверждение сервера</h1>

<div class="default_align_center" style="justify-content: center; display: flex">
    <div class="card" style="width: 400px; border: 3px solid #FF2F54; padding: 40px;">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <p>Чтобы подтвердить сервер, вставьте следующую строку в название сервера:</p>
                <p id="confirm-string">@ViewData["ConfirmString"]</p>
                <button type="button" class="btn btn-secondary" id="copy-button">Скопировать</button>
                <input type="hidden" name="confirmString" value="@ViewData["ConfirmString"]" />
            </div>
            <div class="form-group">
                <input type="submit" value="Подтвердить" style="width: 185px; height: 45px; transform: translateY(12px);" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#copy-button').on('click', function () {
                var confirmString = $('#confirm-string').text();
                navigator.clipboard.writeText(confirmString).then(function () {
                    alert('Кодовая фраза скопирована!');
                });
            });
        });
    </script>
}
